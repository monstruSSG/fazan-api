{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "server",
            "image": "giurgibogdan/fazan:fazan-api",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "giurgibogdan/fazan:nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "server"
            ]
        }
    ]
}